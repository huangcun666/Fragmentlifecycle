        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/but" />
    <fragment
        android:id="@+id/frag"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:name="example.com.layouanimation.MyFragment1">
    </fragment>

</LinearLayout>